<?php
namespace Home\Model;
use Think\Model;
class CartModel extends Model
{
	//添加到购物车
	// 购物车显示的信息: 商品名称 价格 尺寸 材质 数量 总价格
	// 通过 用户id 
	public function addC($goods_id,$goods_attr_ids,$goods_number)
	{
		//判断登录状态
		if(session('?user_info')){
			//已登录 将数据保存到数据表
			//去用户id
			$user_id = session('user_info.id');
			$data = array(
				'user_id' => $user_id,
				'goods_id' => $goods_id,
				'goods_attr_ids' => $goods_attr_ids
				);
			$cart_info = D('Cart') -> where($data) -> find();
			if($cart_info){
				//如果存在 数量加一个
				$data['goods_number'] += $goods_number;
				$res = D('Cart') -> save($data);
				return $res !== false ? true : false;
			}else{
				//记录不存在,添加数据
				$data['goods_number'] = $goods_number;
				$res = D('Cart') -> add($data);
				return $res !== false ? true : false;
			}
		}else{
			//未登录 将数据保存到cookie
			return false;
			
		}
	}

	public function  addAllCart()
	{
		if(session('?user_info')){
			//登录状态
			$user_id = session('user_info.id');
			$cart = D('Cart') -> where(['user_id' => $user_id]) -> select();
			return $cart;
		}else{
			//未登录
			$cart = cookie('cart') ? unserialize( cookie('cart') ) : array();
			
		}
	}
}